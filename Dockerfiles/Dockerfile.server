# Use an official minimal Linux image with build tools
FROM gcc:latest

# Set the working directory
WORKDIR /app

# Copy the server source code to the container
COPY dhcp_server.c .

# Compile the server code
RUN gcc -o dhcp_server dhcp_server.c

# Expose the UDP port 67
EXPOSE 67/udp

# Run the server program
CMD ["./dhcp_server"]
